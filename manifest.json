{
  "manifest_version": 3,
  "name": "Mercator Shmercator",
  "version": "1.0.0",
  "permissions": [
    "contextMenus"
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "dist/background.js",
    "type": "module",
    "scripts": [
      "dist/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/content.js"
      ],
      "css": [
        "css/content.css"
      ]
    }
  ]
}
