{
  "manifest_version": 3,
  "name": "Mercator Shmercator",
  "version": "1.0.0",
  "permissions": ["contextMenus"],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module",
    "scripts": ["dist/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "css": ["css/content.css"]
    }
  ]
}
