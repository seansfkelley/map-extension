{
  "name": "map-extension",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "node esbuild.config.js",
    "watch": "node esbuild.config.js --watch",
    "package-source": "rm -f source.zip && zip -r source.zip * -x '*.zip' -x .git -x '.*' -x 'node_modules/*' -x 'dist/*' -x '__tests__/*'",
    "package": "npm run build && rm -f extension.zip && zip -r extension.zip manifest.json dist/ icons/ css/",
    "test": "jest",
    "lint": "eslint . && prettier --check .",
    "fix": "eslint . --fix && prettier --write ."
  },
  "dependencies": {
    "d3-geo": "^3.1.1",
    "d3-geo-polygon": "^2.0.0",
    "d3-geo-projection": "^4.0.0",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/d3-geo": "^3.1.0",
    "@types/jest": "^29.5.12",
    "@types/jest-image-snapshot": "^6.4.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "canvas": "^3.2.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-image-snapshot": "^6.5.1",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
