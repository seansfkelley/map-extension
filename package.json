{
  "name": "map-extension",
  "version": "1.0.0",
  "scripts": {
    "build": "node esbuild.config.js",
    "watch": "node esbuild.config.js --watch",
    "package": "npm run build && zip -r extension.zip manifest.json dist/",
    "test": "jest",
    "lint": "prettier --check . && eslint .",
    "fix": "prettier --write . && eslint . --fix"
  },
  "dependencies": {
    "d3-geo": "^3.1.1",
    "d3-geo-polygon": "^2.0.0",
    "d3-geo-projection": "^4.0.0",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/d3-geo": "^3.1.0",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}
